// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  bio       String?
  skills    String?  
  location  String?
  phone     String?
  website   String?
  linkedin  String?
  github    String?
  experience String?
  education String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}


